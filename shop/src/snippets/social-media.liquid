    <li class="HorizontalList__Item">
      <a href="{{ settings.social_facebook }}" class="Link Link--primary" target="_blank" rel="noopener" aria-label="Facebook">
        <span class="Icon-Wrapper--clickable">{%- include 'icon' with 'facebook' -%}</span>
      </a>
    </li>

